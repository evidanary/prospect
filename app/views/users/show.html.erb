<% provide(:title, @user.name) %>
<div class="row">
  <aside>
    <%= @user.name %>, <%= @user.email %>
  </aside>
  <div class="span8">
    <% if @user.interests.any? %>
      <h3>Prospects (<%= @user.interests.count %>)</h3>
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <%= render @interests %>
        </tbody>
      </table>
      <%= will_paginate @interests %>
    <% end %>
  </div>
</div>